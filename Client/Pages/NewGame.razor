@page "/newgame"
@inherits NewGameBase
<h3>NewGame</h3>


    <div class="form-group row">
        <label for="staticTitle" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-2">
            <input @bind="Title" type="text" class="form-control" id="staticTitle">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticCount" class="col-sm-2 col-form-label">Questions Count</label>
        <div class="col-sm-2">
            <input @bind="Count" type="text" class="form-control" id="staticCount">
        </div>
    </div>
    <button @onclick="() => (AddGame(new GeneralInformationGame.Shared.Models.Game()
{
Date = DateTime.Now,
Name = Title,
QuestionCount = Count,
}))"
        type="submit" class="btn btn-primary">Submit</button>


